<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="8.0" xmlns="http://javafx.com/javafx/22"
      fx:controller="com.example.salesmanagement.DashboardController">
    <children>
        <Label text="Tableau de board">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="16.0"/>
            </VBox.margin>
        </Label>
        <GridPane hgap="16.0" prefWidth="1106.0" vgap="16.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <VBox spacing="4.0">
                    <children>
                        <Label text="Ventes des 30 derniers jours">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Label>
                        <LineChart fx:id="lastMonthSalesLineChart">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </LineChart>
                    </children>
                </VBox>
                <VBox spacing="4.0" GridPane.columnIndex="1">
                    <children>
                        <Label text="Ventes mensuelles">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <BarChart fx:id="monthlySalesLineChart">
                            <xAxis>
                                <CategoryAxis side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT"/>
                            </yAxis>
                        </BarChart>
                    </children>
                </VBox>
                <VBox spacing="4.0" GridPane.rowIndex="1">
                    <children>
                        <Label text="Les produits les plus vendus">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <TableView fx:id="topSellingProductsTableView"/>
                    </children>
                </VBox>
                <VBox spacing="4.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>
                        <Label text="Les categories les plus vendues">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <PieChart fx:id="topSellingCategoriesPieChart"/>
                    </children>
                </VBox>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</VBox>
