<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefWidth="374.0" spacing="8.0" xmlns="http://javafx.com/javafx/22"
      fx:controller="com.example.salesmanagement.product.ProductController">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Produit">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="16.0"/>
            </VBox.margin>
        </Text>
        <HBox prefWidth="200.0">
            <children>

                <Label prefWidth="110.0" text="Nom *" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="nameTextField" prefHeight="25.0" prefWidth="250.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefWidth="200.0">
            <children>
                <Label prefWidth="110.0" text="Description" HBox.hgrow="ALWAYS"/>
                <TextArea fx:id="descriptionTextArea" prefHeight="56.0" prefWidth="250.0" wrapText="true"
                          HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefWidth="358.0">
            <children>
                <Label prefWidth="110.0" text="Prix d'achat (HT) *" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="purchasePriceExcludingTaxTextField" prefHeight="25.0" prefWidth="250.0"
                           HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefWidth="200.0">
            <children>
                <Label prefHeight="17.0" prefWidth="110.0" text="Prix de vente(HT) *" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="sellingPriceExcludingTaxTextField" prefHeight="25.0" prefWidth="250.0"
                           HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefWidth="200.0">
            <children>
                <Label prefWidth="110.0" text="CatÃ©gorie" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="categoryComboBox" prefHeight="25.0" prefWidth="250.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox prefWidth="200.0">
            <children>
                <Label prefWidth="110.0" text="Taux TVA *" HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="taxRateComboBox" prefHeight="25.0" prefWidth="250.0" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="75.0" text="Enregistrer"/>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Annuler"/>
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</VBox>
