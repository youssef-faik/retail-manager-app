<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="616.0" prefWidth="1260.0" spacing="10.0" xmlns="http://javafx.com/javafx/22"
      fx:controller="com.example.salesmanagement.salesdocument.SalesDocumentsController">
    <Label fx:id="formLabel" layoutX="14.0" layoutY="14.0" text="Factures">
        <font>
            <Font name="System Bold" size="32.0"/>
        </font>
      <VBox.margin>
          <Insets bottom="16.0"/>
      </VBox.margin>
    </Label>
   <HBox spacing="8.0">
      <children>
         <HBox prefHeight="25.0" prefWidth="923.0" HBox.hgrow="ALWAYS">
            <children>
               <Label text="Recherche">
                  <HBox.margin>
                     <Insets right="8.0" />
                  </HBox.margin>
               </Label>
                <TextField fx:id="searchTextField" focusTraversable="false" prefHeight="25.0" prefWidth="451.0"
                           promptText="Rechercher par reference, ou le nom du client"/>
            </children>
         </HBox>
         <HBox prefHeight="25.0" prefWidth="274.0" spacing="8.0">
            <children>
                <Button fx:id="newButton" mnemonicParsing="false" onAction="#addSalesDocument" prefHeight="25.0"
                        prefWidth="90.0" text="Nouveau">
                  <graphic>
                     <FontAwesomeIconView glyphName="PLUS" />
                 </graphic>
               </Button>
                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateSalesDocument" prefHeight="25.0"
                        prefWidth="90.0" text="Modifier">
                  <graphic>
                 <FontAwesomeIconView glyphName="EDIT" />
             </graphic>
               </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSalesDocument" prefWidth="90.0"
                        text="Supprimer">
                  <graphic>
                     <FontAwesomeIconView glyphName="TRASH" />
                 </graphic>
               </Button>
            </children>
         </HBox>
      </children>
   </HBox>
    <TableView fx:id="salesDocumentsTableView" prefHeight="515.0" prefWidth="1260.0"/>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
