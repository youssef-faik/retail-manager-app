<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="616.0" prefWidth="1260.0" spacing="10.0" xmlns="http://javafx.com/javafx/22"
      fx:controller="com.example.salesmanagement.stockmouvement.ListStockMouvementsController">
    <HBox alignment="CENTER_LEFT" spacing="8.0">
        <VBox.margin>
            <Insets bottom="16.0"/>
        </VBox.margin>
        <children>
            <Label graphicTextGap="8.0" text="Mouvement des stock">
                <font>
                    <Font name="System Bold" size="32.0"/>
                </font>
                <graphic>
                    <FontAwesomeIconView glyphName="EXCHANGE" text="ïƒ¬"/>
                </graphic>
            </Label>
        </children>
    </HBox>
    <HBox alignment="TOP_RIGHT" spacing="8.0">
        <children>
            <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="923.0" HBox.hgrow="ALWAYS">
                <children>
                    <Label text="Recherche">
                        <HBox.margin>
                            <Insets right="8.0"/>
                        </HBox.margin>
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="searchTextField" focusTraversable="false" prefHeight="25.0" prefWidth="451.0"
                               promptText="Rechercher par nom du produit ou par la date du mouvement"/>
                </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="419.0" spacing="8.0">
                <children>
                    <Button fx:id="newButton" mnemonicParsing="false" onAction="#addStockMouvement" prefHeight="25.0"
                            prefWidth="210.0" text="Nouveau correction de stock">
                        <graphic>
                            <FontAwesomeIconView glyphName="PLUS"/>
                        </graphic>
                    </Button>
                    <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateStockMouvement"
                            prefHeight="25.0" prefWidth="90.0" text="Modifier">
                        <graphic>
                            <FontAwesomeIconView glyphName="EDIT"/>
                        </graphic>
                    </Button>
                    <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteStockMouvement"
                            prefWidth="90.0" text="Supprimer">
                        <graphic>
                            <FontAwesomeIconView glyphName="TRASH"/>
                        </graphic>
                    </Button>
                </children>
            </HBox>
        </children>
    </HBox>
    <TableView fx:id="stockMouvementTableView" prefHeight="515.0" prefWidth="1260.0"/>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
